        android:layout_height="wrap_content"
        android:id="@+id/viewPagerK">

    </android.support.v4.view.ViewPager>

    <com.viewpagerindicator.TitlePageIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPagerIndicatorK"/>

-->

</LinearLayout>
</ScrollView>