<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/f_layout_margin_bottom"
    android:layout_marginLeft="@dimen/f_layout_margin_left"
    android:background="@android:color/white"
    android:orientation="vertical">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="0.5"
        android:background="@color/grey"
        app:srcCompat="@drawable/ic_product_photo" />


</FrameLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/darkGrey">

        <LinearLayout
            android:id="@+id/textViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@color/darkGrey"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="0dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:text="Product"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLayout"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:text="$100"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/basketButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/likeButton"
            android:layout_toStartOf="@+id/likeButton"
            android:background="@null"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_shopping_basket_white_24dp" />

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/actionButton"
            android:layout_toStartOf="@+id/actionButton"
            android:background="@null"
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_favorite_white_24dp" />

        <ImageButton
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_more_vert_white_24dp" />

    </RelativeLayout>
</LinearLayout>