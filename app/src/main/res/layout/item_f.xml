<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginBottom="3dp">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0.5"
        android:background="@color/grey">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_product_photo"
            android:id="@+id/imageView" />
</FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/relative"
        android:layout_gravity="bottom"
        android:background="@color/darkGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/textViewLayout"
            android:background="@color/darkGrey"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="Product"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:id="@+id/textView6" />

        </LinearLayout>



        <TextView
            android:text="$100"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLayout"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:id="@+id/textView5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_basket_white_24dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/heartButton"
            android:layout_toStartOf="@+id/heartButton"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

        <ImageButton
            android:id="@+id/heartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_favorite_white_24dp"
            android:layout_toLeftOf="@+id/menuDugmesi"
            android:layout_toStartOf="@+id/menuDugmesi"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

        <ImageButton
            android:id="@+id/menuDugmesi"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8" />

    </RelativeLayout>

</FrameLayout>
    </LinearLayout>