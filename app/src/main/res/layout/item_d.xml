<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/d_card_layout_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="@dimen/d_relative_width"
            android:layout_height="@dimen/d_relative_height">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="@dimen/d_image_width"
                android:layout_height="@dimen/d_image_height"
                android:layout_margin="12dp"
                android:layout_marginBottom="@dimen/d_image_margin_bottom"
                android:background="@color/grey" />


            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/price"
                android:layout_marginLeft="16dp"
                android:paddingLeft="@dimen/product_name_padding_left"
                android:text="Product"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"

                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButton"
                android:layout_alignLeft="@+id/productName"
                android:layout_alignStart="@+id/productName"
                android:layout_marginBottom="@dimen/d_price_margin_bottom"
                android:paddingBottom="@dimen/d_price_padding_right"
                android:paddingLeft="@dimen/d_price_padding_left"
                android:text="$100"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="@dimen/price_text_size" />


        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>