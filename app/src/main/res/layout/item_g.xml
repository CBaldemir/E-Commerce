<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_weight="0.65"
    android:layout_margin="@dimen/g_item_relative_layout_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton

            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/g_item_image_button_layout_height"
            app:srcCompat="@drawable/photo2"
            android:id="@+id/image"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="@dimen/g_item_relative_layout_height" android:layout_weight="0.5"
            android:background="@color/darkGrey"
            android:layout_below="@+id/image"
            android:layout_alignRight="@+id/image"
            android:layout_alignEnd="@+id/image">

            <TextView
                android:text="Product"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/g_item_textview_product_margin_top"
                android:paddingLeft="@dimen/g_item_textview_product_padding_left"
                android:textSize="@dimen/g_item_textview_product_textsize"
                android:id="@+id/productName" />

            <ImageButton
                android:id="@+id/menuDugmesi"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_white_24dp"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/productName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/g_item_image_button_menudugmesi_margin_top"
                android:padding="@dimen/g_item_image_button_menudugmesi_padding" />

            <TextView
                android:text="$100"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/g_item_textview_product_padding_left"
                android:id="@+id/price"
                android:layout_below="@+id/productName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>



</RelativeLayout>