<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.27"
            android:src="@drawable/ic_photo_black_48dp" />


        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.1"
            android:layout_below="@+id/bigActionButton"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_marginTop="5dp"
            android:focusable="false"/>

        <ImageButton
            android:id="@+id/bigActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_below="@+id/productName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/description"
            android:layout_alignLeft="@+id/bigPrice" />

        <TextView
            android:id="@+id/bigPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bigImage"
            android:layout_margin="5dp"
            android:text="$100"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity=""
            android:layout_row="1"
            android:text="@string/lorem"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="9dp"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_below="@+id/productName"
            android:layout_alignTop="@+id/bigActionButton"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_alignRight="@+id/productName"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Product"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/bigPrice"
            android:layout_toLeftOf="@+id/bigPrice"
            android:layout_toRightOf="@+id/image"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>